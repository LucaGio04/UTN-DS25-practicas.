// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String
  authorId  Int       // Clave for치nea
  author    User      @relation(fields: [authorId], references: [id]) // Campo de relaci칩n
  cover     String
  category  String
  price     Int      @default(0)
  featured  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@index([title])
  @@index([authorId])
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String
  password String // Nuevo campo para la contrase침a
  books    Book[]  // Campo de relaci칩n: Uno a Muchos
}
